<p>
  <%= f.label :email, Spree.t(:email) %><br />
  <%= f.email_field :email, class: 'title form-item form--large margin-bottom-medium' %>
</p>
<div id="password-credentials">
  <p>
    <%= f.label :password, Spree.t(:password) %><br />
    <%= f.password_field :password, class: 'title form-item form--large margin-bottom-medium' %>
  </p>

  <p>
    <%= f.label :password_confirmation, Spree.t(:confirm_password) %><br />
    <%= f.password_field :password_confirmation, class: 'title form-item form--large margin-bottom-medium' %>
  </p>
</div>

<div data-hook="signup_below_password_fields"></div>
