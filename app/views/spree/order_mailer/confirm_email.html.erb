
<%=image_tag "logo.png" %>
<h3>Order confirmation for order <%= @order.number %> </h3>

      ___________________________________________________________________
<table>
    <colgroup>
      <col style="width: 40%;" />
      <col style="width: 20%;" />
      <col style="width: 20%;" />
      <col style="width: 20%;" />

    </colgroup>

    <thead>
      <tr>
        <th> Article </th>
        <th>Size</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>

    <tbody>
    <% @order.line_items.each do |item| %>
    <tr>
      <td><%= item.variant.product.name_en %></td>
      <td><%= item.variant.options_text %></td>
      <td><%=item.quantity%></td>
      <td><%= item.single_money %></td>

    </tr>
    <% end %>
     <tr>
      <td colspan="3">shimpent</td>
      <td><%=@order.shipment_total  %></td>
    </tr>
    <tr>
      <td colspan="3">total amount</td>
      <td><%=@order.total %></td>
    </tr>
      <tr class="edit-tracking vertical-middle">
      </tr>
    </tbody>
  </table>

  <p><%=@order.ship_address  %> </p>





